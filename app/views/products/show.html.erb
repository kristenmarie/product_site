<h1> <%= @product.name %> <button class="btn btn-warning review-button"><%= link_to "Add Review", new_product_review_path(@product) %></button></h1>

<h3>Cost: $<%= @product.cost %>.00 </h3>
<h3>Country of Origin: <%= @product.origin %> </h3>

<h4>Reviews:</h4>

<% if @product.reviews.any? %>
  <% @product.reviews.each do |review| %>
    <div class="review panel panel-default">
      <div class="panel-heading">
        <strong> <%= review.author %> | Rating: <%= review.rating %> | <button class="btn btn-success"><%= link_to "Edit", edit_product_review_path(@product, review) %></button> </strong>
      </div>
      <div class="panel-body">
        <p> <%= review.content_body %> </p>
      </div>
    </div>
  <% end %>
<% else %>
  <h4>There are currently no reviews for this product!</h4>
<% end %>
<hr>
<button class="btn btn-success"><%= link_to "Edit", edit_product_path(@product) %></button>
<button class="btn btn-danger delete-button"><%= link_to "Delete", product_path(@product),
                               :data => {:confirm => "Are you sure?",
                                              :method => "delete"} %></button>
